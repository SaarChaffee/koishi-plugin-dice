{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "target": "es2020",
    "module": "ESNext",
    "declaration": true,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "Bundler",
    "strictBindCallApply": true,
    "baseUrl": ".",
    "paths": {
      "@saarchaffee/koishi-plugin-dice": ["src"]
    }
  },
  "include": ["src"]
}
